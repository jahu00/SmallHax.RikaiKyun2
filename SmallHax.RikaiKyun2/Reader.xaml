<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:SmallHax.RikaiKyun2.Controls"
             x:Class="SmallHax.RikaiKyun2.Reader"
             Title="Reader">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <AbsoluteLayout Margin="-1">
            <controls:DocumentRenderer x:Name="Renderer" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" />
            <controls:DictionaryPopup x:Name="DictionaryPopup" AbsoluteLayout.LayoutBounds="0,1,1,0.25" AbsoluteLayout.LayoutFlags="All" Margin="0" Padding="0" />
        </AbsoluteLayout>
    </Grid>
</ContentPage>