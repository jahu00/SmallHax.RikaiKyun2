<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmallHax.RikaiKyun2.Controls.DictionaryPopup">
    <Frame x:Name="Frame" BorderColor="Transparent" BackgroundColor="White" Margin="0" CornerRadius="0">
        <VerticalStackLayout>
            <BoxView   
                Color="Black"  
                Margin="0,0,0,0"                   
                HeightRequest="2"  
                HorizontalOptions="Fill" />
            <ScrollView x:Name="Scroll">
                <VerticalStackLayout x:Name="EntriesContainer">
                </VerticalStackLayout>
            </ScrollView>
        </VerticalStackLayout>
    </Frame>
</ContentView>
