<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmallHax.RikaiKyun2.Controls.DictionaryEntry">
    <Frame BorderColor="Transparent" Margin="0" Padding="0">
        <StackLayout x:Name="Layout" Orientation="Vertical">
            <Label 
                VerticalOptions="Center" 
                HorizontalOptions="Start"
                x:Name="Label"
                Padding="10"
                LineBreakMode="WordWrap"
                BindingContext="{x:Reference Layout}"
                WidthRequest="{Binding Path=Width}"
                />
            <BoxView   
                Color="Black"  
                Margin="0,0,0,0"                   
                HeightRequest="1"  
                HorizontalOptions="Fill" />
        </StackLayout>
    </Frame>
</ContentView>
