<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:SmallHax.RikaiKyun2.Controls"
             x:Class="SmallHax.RikaiKyun2.MainMenu"
             Title="MainMenu">
    <AbsoluteLayout Margin="-1">
        <VerticalStackLayout AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
            <controls:MenuItem Text="Open" x:Name="OpenButton" Tapped="OpenButton_Tapped"/>
            <controls:MenuItem Text="Exit" x:Name="ExitButton" Tapped="ExitButton_Tapped" />
        </VerticalStackLayout>
        <controls:Spinner AbsoluteLayout.LayoutBounds="0,0,1,1"
             AbsoluteLayout.LayoutFlags="All" x:Name="Spinner" IsVisible="False"/>
    </AbsoluteLayout>
</ContentPage>